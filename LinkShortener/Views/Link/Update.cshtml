@model LinkShortener.ViewModels.EditorLinkViewModel

@{
    ViewData["Title"] = "Изменение";
}

<h1>Изменить</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div class="text-danger">@ViewBag.Error</div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pb-4">
                <label asp-for="Long_Link" class="control-label"></label>
                <input asp-for="Long_Link" class="form-control" />
                <span asp-validation-for="Long_Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
